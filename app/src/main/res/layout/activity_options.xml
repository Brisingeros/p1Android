<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/simpsons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="223dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@color/fondo4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@color/fondo3"
        android:text="Selecciona número de preguntas"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Spinner
        android:id="@+id/numPreg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/white"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="139dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="139dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="52dp"
        android:background="@color/fondo3"
        android:text="Selecciona el tipo de preguntas"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numPreg" />

    <CheckBox
        android:id="@+id/imagentexto"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginEnd="212dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="212dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:checked="false"
        android:text="Imagen -Texto"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/textoimagen"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginEnd="208dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="208dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:checked="false"
        android:text="Texto - Imagen"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagentexto" />

    <CheckBox
        android:id="@+id/imagenimagen"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginEnd="197dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="197dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:checked="false"
        android:text="Imagen - Imagen"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoimagen" />

    <CheckBox
        android:id="@+id/videotexto"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginEnd="197dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="197dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:checked="false"
        android:text="Video - Texto"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenimagen" />

    <Button
        android:id="@+id/exit"
        android:layout_width="95dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/boton"
        android:text="Atrás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="95dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/boton"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>